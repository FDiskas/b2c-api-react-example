{
  "compilerOptions": {
    "allowJs": false,
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "newLine": "LF",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
    "noEmitHelpers": true,
    "importHelpers": true,
    "strictNullChecks": false,
    "declaration": false,
    "noImplicitAny": true,
    "removeComments": false,
    "jsx": "react",
    "skipLibCheck": true,
    "outDir": "lib",
    "lib": [
      "es6",
      "es7",
      "es2015",
      "es2015.promise",
      "es2015.iterable",
      "es2016",
      "es2017",
      "es2017.object",
      "scripthost",
      "dom"
    ],
    "baseUrl": ".",
    "paths": {
      "src": ["src"],
      "@assets*": ["src/shared/assets*"],
      "@constants*": ["src/shared/constants*"],
      "@components*": ["src/shared/components*"],
      "@containers*": ["src/shared/containers*"],
      "@helpers*": ["src/shared/helpers*"],
      "@interfaces*": ["src/shared/interfaces*"],
      "@routes*": ["src/shared/routes*"],
      "@stores*": ["src/shared/stores*"],
      "@selectors*": ["src/shared/selectors*"],
      "@services*": ["src/shared/services*"]
    }
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "include": [
    "src/**/*"
  ]
}
